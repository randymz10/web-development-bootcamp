<% if(locals.books) { %> 
<% books.forEach(book=> { %>

<article class="mt-3 pt-4 d-flex border-top">
  <section class="col-3">
    <img src="<%= book.link_image ? book.link_image : 'https://placehold.co/200x200'%>" class="img-thumbnail" alt="..." />
  </section>
  <section class="col-9 px-3">
    <h2>
      <a
        href="#edit<%= book.id%>"
        class="text-decoration-none"
        data-bs-toggle="modal"
        data-bs-target="#edit<%= book.id %>"
      >
        <%= book.title %>
      </a>
      <br />
      <small>by <%= book.author %></small>
    </h2>
    <%- include('./edit.ejs', {book: book}) %>
    <p>
      Rating:
    <% for(let i = 0; i < book.rating; i++) { %>
      <span class="rating-star"><i class="bi bi-star-fill"></i></span>
    <% } %>
    </p>
    <p><%= book.review %></p>
  </section>
</article>
<% }); %> <% } %>